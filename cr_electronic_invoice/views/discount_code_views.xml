<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_discount_code_tree" model="ir.ui.view">
        <field name="name">discount.code.tree</field>
        <field name="model">discount.code</field>
        <field name="arch" type="xml">
            <tree string="Discount code">
                <field name="code"/>
                <field name="name"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="action_discount_code" model="ir.actions.act_window">
        <field name="name">Discount Code</field>
        <field name="res_model">discount.code</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
